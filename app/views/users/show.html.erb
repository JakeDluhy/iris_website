<% provide(:title, @user.name) %>
  <div class="half-width-card-center user-header-info">
    <div class="user-profile-info">
      <% if @user.avatar_url.nil?  %>
      <%= image_tag 'http://res.cloudinary.com/illinois-robotics-in-space/image/upload/v1410838106/default_nohvld.png' %>
      <% else %>
      <%= image_tag @user.avatar_url(:display) %>
      <% end %>
      <div class="name">
      	<h3>
      		<%= @user.name %>
      	</h3>
        <% unless @user.major.blank? %><h5><%= @user.major %></h5><% end %>
        <% unless @user.year.blank? %><h5><%= @user.year %></h5><% end %>
      </div>
      <p class="description"><% if !@user[:bio].blank? %>
        <%= @user[:bio] %>
        <% elsif @user == current_user %>
        <%= link_to "Write a short bio", edit_user_path(current_user) %>
        <% end %>
      </p>
      </p>
    </div>
    <div class="teams">
      <% unless @teams.empty? %><h4>Teams</h4><% end %>
      <% @teams.each do |team| %>
        <p><%= link_to team.name, team %><%= ": #{team.hook}" unless team.hook.nil? %></p>
      <% end %>
    </div>
    <div class="subteams">
      <% unless @subteams.empty? %><h4>Subteams</h4><% end %>
      <% @subteams.each do |subteam| %>
        <p><%= link_to subteam.name, subteam %>: <%= ": #{subteam.hook}" unless subteam.hook.nil? %></p>
      <% end %>
    </div>
  </div>
  