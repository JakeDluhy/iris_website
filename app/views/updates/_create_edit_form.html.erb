<div class="half-width-card-center">
  <%= form_for(@update) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { object: @update } %>

    <%= f.label :title, "Title:", class: "form-label" %>
    <%= f.text_field :title, class: "update-field" %><br/>

    <%= f.label :content, "Content:", class: "form-label" %>
    <%= f.text_area :content, { rows: 6 } %><br/>

    <%= render partial: 'shared/picture_form', locals: { label: 'Relevant Pictures', f: f } %>
    
    <%= f.label :team_id, "Choose an associated team:", class: "form-label" %>
    <%= f.collection_select(:team_id, @teams, :id, :name, prompt: true, class: "team-select") %><br/>

    <%= f.label :subteam_id, "And/or choose an associated subteam:", class: "form-label" %>
    <%= f.collection_select(:subteam_id, @subteams, :id, :name, prompt: true, class: "subteam-select") %><br/>

    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>