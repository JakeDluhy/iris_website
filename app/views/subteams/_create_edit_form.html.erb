<div class="half-width-card-center title-container">
  <%= form_for(@subteam) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { object: @subteam } %>
    
    <%= f.label :name, "Name:", class: "form-label" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description:", class: "form-label" %>
    <%= f.text_area :description, { rows: 6 } %>

    <%= f.label :team_id, "Select a team:", class: "form-label" %>
    <%= f.collection_select(:team_id, @teams, :id, :name, prompt: true, class: "team-select") %>

    <%= f.submit 'Create Team', class: "btn btn-primary" %>
  <% end %>
</div>