<% provide(:title, 'Create a Member of the Week') %>
<h1>Create a Member of the Week</h1>

<div class="card-container">
  <div class="half-width-card-center">
    <%= form_for(@weekly_award) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { object: @weekly_award } %>

      <%= f.label :user_id, "Select the User:", class: "form-label" %>
      <%= f.collection_select(:user_id, @users, :id, :name, prompt: true, class: "member-of-the-week-select") %><br/>

      <%= f.label :award_week, "Award Week:", class: "form-label" %>
      <%= f.text_field :award_week %><br/>

      <%= f.label :award_description, "Award Description", class: "form-label" %>
      <%= f.text_area :award_description, { rows: 6 } %><br/>

      <%= f.label :award_type, "Choose an award type:", class: "form-label" %>
      <%= f.select(:award_type, options_for_select([['Member of the Week', 'member of the week']]), prompt: true, class: "member-of-the-week-select") %><br/>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>