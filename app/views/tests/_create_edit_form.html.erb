<div class="half-width-card-center title-container">
  <%= form_for(@test) do |f| %>

    <%= f.label :name, "Name:", class: "form-label" %>
    <%= f.text_field :name, class: "update-field" %><br/>
    
    <%= f.label :team_id, "Choose an associated team:", class: "form-label" %>
    <%= f.collection_select(:team_id, @teams, :id, :name, prompt: true, class: "subteam-select") %><br/>

    <%= f.label :test_date, "Test Date", class: "form-label" %>
    <%= f.datetime_field :test_date, placeholder: "yyyy-mm-dd" %>

    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Delete this test', test_path(@test), :method => :delete %>
</div>